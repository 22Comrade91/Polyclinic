<Window x:Class="HospitalApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Имя пользователя" Margin="0,0,0,3" Width="250"/>
            <TextBox x:Name="UsernameTextBox" Width="250" Margin="0,0,0,5"/>

            <TextBlock Text="Пароль" Margin="0,0,0,3" Width="250"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Margin="0,0,0,30"/>

            <Button Content="Войти" Width="250" Click="LoginButton_Click" />
            <Button Content="Зарегистрироваться" Width="250" Margin="0,10,0,0" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
