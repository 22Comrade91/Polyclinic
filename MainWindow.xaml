<Window x:Class="HospitalManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление поликлиникой «Жить здорово»" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <Button Content="Управление пациентами" Click="PatientsButton_Click" Height="30" Margin="0,10"/>
            <Button Content="Управление врачами" Click="DoctorsButton_Click" Height="30" Margin="0,10"/>
            <Button Content="Управление заявками" Click="VisitsButton_Click" Height="30" Margin="0,10"/>
            <Button Content="Управление услугами" Click="ServicesButton_Click" Height="30" Margin="0,10"/>
            <Button Content="Управление отчетами" Click="ReportsButton_Click" Height="30" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>