<Window x:Class="HospitalManagement.Views.DoctorsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Врачи" Height="450" Width="800">
    <Grid>
        <!-- Таблица с врачами -->
        <DataGrid x:Name="DoctorsDataGrid" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="760" Margin="10"/>

        <!-- Кнопки управления -->
        <Button Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Click="AddButton_Click" Width="80"/>
        <Button Content="Редактировать" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="100,0,0,10" Click="EditButton_Click" Width="90"/>
        <Button Content="Удалить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="200,0,0,10" Click="DeleteButton_Click" Width="80"/>

        <!-- Кнопка экспорта -->
        <Button Content="Экспорт в PDF" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,390,10" Click="ExportToPdfButton_Click" Width="120"/>
    </Grid>
</Window>
